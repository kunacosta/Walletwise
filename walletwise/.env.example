# Firebase Web App configuration (Vite envs)
# Copy this file to `.env` and fill in your project values.

VITE_FB_API_KEY=your_api_key
VITE_FB_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FB_PROJECT_ID=your_project_id
VITE_FB_APP_ID=1:xxxxx:web:yyyyy
VITE_FB_STORAGE_BUCKET=your_project.appspot.com
VITE_FB_MESSAGING_SENDER_ID=1234567890

# Optional: set to 'true' to force long polling if your network blocks Firestore streaming
# VITE_FB_FORCE_LONG_POLLING=true

# Optional: use local Firestore emulator for safe local-only testing
# VITE_USE_FIRESTORE_EMULATOR=true
# VITE_FIRESTORE_EMULATOR_HOST=127.0.0.1
# VITE_FIRESTORE_EMULATOR_PORT=8080
